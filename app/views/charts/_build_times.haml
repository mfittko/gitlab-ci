%fieldset
  %legend
    Build duration in minutes for last #{Settings.charts['builds_time_span']} builds
  %div.row-fluid
    %canvas#build_timesChart.padded{ style: "width: 100%" }

:javascript
  var data = {
    labels : #{@charts[:build_times].labels.to_json},
    responsive: true,
    datasets : [
      {
        fillColor : "#4A3",
        strokeColor : "rgba(151,187,205,1)",
        pointColor : "rgba(151,187,205,1)",
        pointStrokeColor : "#fff",
        data : #{@charts[:build_times].build_times.to_json}
      }
    ]
  }
  var ctx = $("#build_timesChart").get(0).getContext("2d");
  new Chart(ctx).Line(data,{"scaleOverlay": true, "responsive": true});
