%tr.build.alert{class: build_status_alert_class(build)}
  %td.status
    = build.status

  %td.build-link
    = link_to build_url(build) do
      %strong #{build.short_sha}

  %td.build-message
    %span= truncate(build.git_commit_message, length: 50)

  %td.build-branch
    - unless @ref
      %span
        = link_to (build.tag || build.ref), project_path(@project, ref: build.tag || build.ref)

  %td.duration
    - if build.duration
      #{Time.at(build.duration).utc.strftime("%H:%M:%S")}

  %td.timestamp
    - if build.finished_at
      %span #{time_ago_in_words build.finished_at.localtime} ago
